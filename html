  <script>
    let hasPlayed = false;

    function subscribe() {
      window.location.href = "https://www.youtube.com/@MauMau-g4h";
    }

    function playVideo() {
      const player = new YT.Player('youtube-video', {
        events: {
          onReady: function(event) {
            event.target.playVideo(); // Play the video
          }
        }
      });
    }

    // Scroll Event to Trigger Video Play
    window.addEventListener('scroll', function () {
      if (!hasPlayed) { // Play only once
        hasPlayed = true; // Ensure it doesn't trigger multiple times
        playVideo();
      }
    });

    // Load YouTube IFrame API
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
  </script>
